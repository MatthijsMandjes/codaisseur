<%= form_for @event do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location %>
  </div>
  <div class="form-group">
    <label>Price</label>
    <%= f.number_field :price %>
  </div>
  <div class="form-group">
    <label>capacity</label>
    <%= f.number_field :capacity %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <label>Includes food</label>
    <%= f.text_field :includes_food %>
  </div>
  <div class="form-group">
    <label>Includes drinks</label>
    <%= f.text_field :includes_drinks %>
  </div>
  <div class="form-group">
    <label>Starts at</label>
    <%= f.text_field :starts_at %>
  </div>
  <div class="form-group">
    <label>Ends at</label>
    <%= f.text_field :ends_at %>
  </div>
  <div class="form-group">
    <label>Active</label>
    <%= f.text_field :active  %>
  </div>

  <label>Publish this place?</label>
  <div class="actions">
   <%= f.submit "Save", class: "btn btn-primary" %>
 </div>
<% end %>
